#!/bin/bash
# vim: ts=3 sw=3 fdm=indent:

: common
	parse-conf(){
		while read l ; do 
			eval echo "$l"
		done | sed -z 's/[ \t\n]\+/ /g'
		echo -n ' '
	}
	conf-gnu-toolchain(){
		parse-conf <<-'EOF'
			--prefix=$_p
			--with-sysroot=/
			--with-local-prefix=$_p/sub
			--with-lib-path=$_p/lib
			--with-native-system-header-dir=$_p/include
			LIB_PATH=$_p/lib

			--with-glibc-version=2.25 
			--with-target-system-zlib 
			--with-system-zlib 
			
			--disable-nls
			--disable-werror

			--enable-linker-build-id
			--enable-clocale=gnu
			--enable-gnu-unique-object
			--enable-default-pie
			--enable-multibyte 
			--enable-plugins
		EOF
	}
	conf-gnu-toolchain-multi(){
		parse-conf <<-'EOF'
			--enable-shared
			--with-arch=native
			--with-arch-32=native
			--with-arch-64=native
			--enable-multiarch
			--enable-multilib
			--with-abi=m64
			--with-multilib-list=m32,m64,mx32
			--enable-checking=release
			--enable-lto 
		EOF
	}
	conf-gnu-toolchain-manypy(){
		parse-conf <<-'EOF'
			--prefix=$_p
			--with-sysroot=/
		EOF
	}
	conf-cross-compile(){
		parse-conf <<-'EOF'
			--build=$1
			--host=$2
			--target=$3
		EOF
	}
: binutils
	conf-binutils-first(){
		parse-conf <<-'EOF'
			--prefix=$_p
			--with-sysroot=/
			--with-local-prefix=$_p/sub
			--with-lib-path=$_p/lib
			--with-native-system-header-dir=$_p/include
			LIB_PATH=$_p/lib

			--with-glibc-version=2.25 
			
			--disable-nls
			--disable-werror
			--disable-gdb
			--disable-shared
			--disable-gold
			--disable-libdecnumber
			--disable-readline
			--disable-sim
			--disable-profile
			--disable-threads
			--disable-lto
			--disable-multilib
			--disable-multiarch
			
#			--enable-static
			--with-arch=native
#			--enable-targets=i686-pc-linux-gnu,x86_64-pc-linux-gnu,x86_64-pc-linux-gnux32
#			--enable-default-pie
#			--enable-multibyte 

#			--enable-linker-build-id
#			--enable-clocale=gnu
#			--enable-gnu-unique-object
		EOF
	}
	conf-binutils-mine(){
		conf-gnu-toolchain
		conf-gnu-toolchain-multi
		parse-conf <<-'EOF'
			--enable-targets=all
			--enable-gold
			--disable-gdb
			--enable-install-libiberty
			--enable-install-libbfd
		EOF
	}
	conf-binutils-manypy(){
		conf-gnu-toolchain-manypy
		parse-conf <<-'EOF'
			--disable-gdb
			--disable-libdecnumber
			--disable-readline
			--disable-sim
		EOF
	}
	conf-binutils(){
		conf-binutils-manypy
	}
: gcc
	conf-gcc-mine(){
		conf-gnu-toolchain
		conf-gnu-toolchain-multi
		parse-conf <<-'EOF'
			--enable-languages=c,c++ 
			--disable-bootstrap 
			--disable-vtable-verify 
		EOF
	}
	conf-gcc-manypy-common(){
		parse-conf <<-'EOF'
			--disable-libsanitizer
			--disable-libssp
			--with-glibc-version=2.25
		EOF
	}
	conf-gcc-manypy(){
		conf-gnu-toolchain-manypy
		conf-gcc-manypy-common
		parse-conf <<-'EOF'
			--enable-languages=c,c++
			--enable-shared
			--enable-threads
		EOF
	}
	conf-gcc-first(){
		parse-conf <<-'EOF'
			--prefix=$_p
			--with-sysroot=/
			--with-local-prefix=$_p/sub
			--with-lib-path=$_p/lib
			--with-native-system-header-dir=$_p/include
			LIB_PATH=$_p/lib
			LD_LIBRARY_PATH=/data/test/lib
#			LDFLAGS="-L$_p/lib"
#			CFLAGS="-L$_p/lib"
#			CXXFLAGS="-L$_p/lib"

			--with-{gmp,mpfr,mpc,isl}=$_p

			--with-glibc-version=2.25
			--enable-languages=c

			--enable-linker-build-id
			--enable-clocale=gnu
			--enable-gnu-unique-object
#			--enable-default-pie
#			--enable-multibyte 
#			--enable-static

			--disable-shared
			--disable-lto
 			--disable-bootstrap
			--disable-decimal-float
			--disable-multilib
			--disable-multiarch
			--disable-nls
			--disable-threads
			--disable-libatomic
			--disable-libffi
			--disable-libgomp
			--disable-libitm
			--disable-libmpx
			--disable-libquadmath
			--disable-libsanitizer
			--disable-libssp
			--disable-profile
			--disable-vtable-verify 
			--disable-werror
			--with-arch=native
			--without-headers
			--with-newlib
		EOF
	}
	conf-gcc-strap-manypy(){
		conf-gnu-toolchain-manypy
		conf-gcc-manypy-common
		parse-conf <<-'EOF'
			--enable-languages=c
			--disable-shared
			--disable-threads
			--disable-libatomic
			--disable-decimal-float
			--disable-libffi
			--disable-libgomp
			--disable-libitm
			--disable-libmpx
			--disable-libquadmath
			--without-headers
			--with-newlib
		EOF
	}
	conf-gcc(){
		conf-gnu-toolchain
		conf-gnu-toolchain-multi
		parse-conf <<-'EOF'
			--enable-languages=c,c++ 
			--disable-bootstrap 
			--disable-vtable-verify 
		EOF
	}
: glibc
	conf-glibc-first(){
		parse-conf <<-'EOF'
			--enable-kernel=4.2.0 
			--with-headers=$_p/include 
			--prefix=$_p
			--with-sysroot=/ 
			--enable-shared 
			--disable-profile 
			--disable-add-ons
			--enable-kernel=4.2.0 
			--disable-multilib 
			--disable-multi-arch 
			--with-arch=native
		EOF
	}
	conf-glibc-mine(){
		parse-conf <<-'EOF'
			--with-headers=$_p/include 
			--prefix=$_p
			--with-sysroot=/ 
			--enable-shared 
			--disable-profile 
			--enable-kernel=4.2.0 
			--enable-multilib 
			--enable-multi-arch 
			--with-arch=native
		EOF
	}
	conf-glibc-manypy(){
		parse-conf <<-'EOF'
			--prefix=$_p
			--enable-add-ons
			--enable-profile
			--build=%s
			--host=%s
			CC=%s
			CXX=%s
			AR=%s
			AS=%s
			LD=%s
			NM=%s
			OBJCOPY=%s
			OBJDUMP=%s
			RANLIB=%s
			READELF=%s
			STRIP=%s
		EOF
	}
	conf-glibc(){
		conf-glibc-mine
	}
: aux libraries
	conf-gmp-first(){
		parse-conf <<-'EOF'
			--prefix=$_p
		EOF
	}
	conf-gmp(){
		parse-conf <<-'EOF'
			--prefix=$_p
			--enable-cxx
		EOF
	}
	conf-mpfr-first(){
		parse-conf <<-'EOF'
			--{prefix,with-gmp}=$_p
			--disable-decimal-float
			--disable-float128
			--with-gnu-ld
		EOF
	}
	conf-mpfr(){
		parse-conf <<-'EOF'
			--{prefix,with-gmp}=$_p
			--enable-decimal-float
			--enable-float128
			--with-gnu-ld
		EOF
	}
	conf-mpc-first(){ conf-mpc ;}
	conf-mpc(){
		parse-conf <<-'EOF'
			--{prefix,with-{mpfr,gmp}}=$_p
			--with-gnu-ld
		EOF
	}
	conf-isl-first(){ conf-isl ;}
	conf-isl(){
		parse-conf <<-'EOF'
			--{prefix,with-{mpfr,gmp,mpc}}=$_p
			--with-gnu-ld 
		EOF
	}
	conf-zlib-first(){ conf-zlib ;}
	conf-zlib(){
		parse-conf <<-'EOF'
			--prefix=$_p
			--{,shared}libdir=$_p/lib
			--includedir=$_p/include
			--shared
		EOF
	}
: trash
	conf-root(){
		parse-conf <<-'EOF'
			--enable-multiarch 
			--enable-languages=c 
			--enable-c++ 
			--enable-shared 
			--enable-plugin 
			--enable-plugins 
			--disable-nls 
			--disable-multilib 
			--disable-bootstrap 
			--disable-gdb 
			--disable-libsanitizer 
			--disable-gold 
			--disable-libstdcxx 
			--without-gdb 
			--prefix=/usr/local/opt 
			--with-local-prefix=/usr/local/opt/sub 
			--with-sysroot=/ 
			--with-native-system-header-dir=/include
		EOF
	}
	__old__(){
		cat <<-EOF
		#binutils:
			#--enable-{multi{arch,byte,lib},lto,shared,plugins,targets=all,golfd} \
			#--disable-{nls,gdb,werror,bootstrap} \
			#--with-{system-zlib,arch=native,sysroot=/,glibc-version=2.25} \
			#--enable-linker-build-id \
			#--enable-clocale=gnu \
			#--enable-gnu-unique-object --disable-vtable-verify \
			#--enable-default-pie \
			#--enable-checking=release \
			#--prefix=/usr/local/opt \
			#--with-local-prefix=/usr/local/opt/sub \
			#--with-lib-path=/usr/local/opt/lib \
			#--with-native-system-header-dir=/usr/local/opt/include \
			#--enable-install-lib{iberty,bfd} \
			#--{build,host}=x86_64-pc-linux-gnu \
			#--target=i686-pc-linux-gnu \
			#LIB_PATH=/usr/local/opt/lib
			echo you
		EOF
	}
	_nope__(){
		/dev/null <<-'EOFEOF'
			# --with-build-sysroot=/usr/local/opt 
			# --with-lib-path=/usr/local/opt/lib
			# --with-sysroot=/ 
			# --with-local-prefix=/usr/local/opt 
			# --with-build-sysroot=/usr/local/opt 
			#eof

			################################################################################
			################################################################################
			##  OLD CONFIGURES  ############################################################
			################################################################################
			################################################################################

			/binutils-gdb/configure \
				--enable-{multi{arch,byte,lib},lto,shared,plugins,targets=all,golfd} \
				--disable-{nls,gdb,werror,bootstrap} \
				--with-{system-zlib,arch{,-{32,64}}=native,sysroot=/,glibc-version=2.25} \
				--enable-linker-build-id \
			--enable-clocale=gnu \
			--enable-gnu-unique-object --disable-vtable-verify \
			--enable-default-pie \
			--with-abi=m64 --with-multilib-list=m32,m64,mx32 \
			 --enable-checking=release \
				--prefix=/usr/local/opt \
				--with-local-prefix=/usr/local/opt/sub \
				--with-lib-path=/usr/local/opt/lib \
				--with-native-system-header-dir=/usr/local/opt/include \
				--enable-install-lib{iberty,bfd} \
				LIB_PATH=/usr/local/opt/lib
			 

			#	--with-build-sysroot=/usr/local/opt \
			#	--with-lib-path=/usr/local/opt/lib
			#	--with-sysroot=/ \
			#	--with-local-prefix=/usr/local/opt \
			#	--with-build-sysroot=/usr/local/opt \
			#eof

			#configures/binutils-i686
			../../binutils-gdb/configure \
				--enable-{multi{arch,byte,lib},lto,shared,plugins,targets=all,golfd} \
				--disable-{nls,gdb,werror,bootstrap} \
				--with-{system-zlib,arch=native,sysroot=/,glibc-version=2.25} \
				--enable-linker-build-id \
			--enable-clocale=gnu \
			--enable-gnu-unique-object --disable-vtable-verify \
			--enable-default-pie \
			 --enable-checking=release \
				--prefix=/usr/local/opt \
				--with-local-prefix=/usr/local/opt/sub \
				--with-lib-path=/usr/local/opt/lib \
				--with-native-system-header-dir=/usr/local/opt/include \
				--enable-install-lib{iberty,bfd} \
				--{build,host}=x86_64-pc-linux-gnu \
				--target=i686-pc-linux-gnu \
				LIB_PATH=/usr/local/opt/lib
			 

			#	--with-build-sysroot=/usr/local/opt \
			#	--with-lib-path=/usr/local/opt/lib
			#	--with-sysroot=/ \
			#	--with-local-prefix=/usr/local/opt \
			#	--with-build-sysroot=/usr/local/opt \
			#eof

			#configures/binutils-i686-local
			../../binutils-gdb/configure \
				--enable-{multi{arch,byte,lib},lto,shared,plugins,targets=all,golfd} \
				--disable-{nls,gdb,werror,bootstrap} \
				--with-{system-zlib,arch=native,sysroot=/,glibc-version=2.25} \
				--enable-linker-build-id \
			--enable-clocale=gnu \
			--enable-gnu-unique-object --disable-vtable-verify \
			--enable-default-pie \
			 --enable-checking=release \
				--prefix=/usr/local/opt \
				--with-local-prefix=/usr/local/opt/sub \
				--with-lib-path=/usr/local/opt/lib \
				--with-native-system-header-dir=/usr/local/opt/include \
				--enable-install-lib{iberty,bfd} \
				--build=x86_64-pc-linux-gnu \
				--{host,target}=i686-pc-linux-gnu \
				LIB_PATH=/usr/local/opt/lib
			 

			#	--with-build-sysroot=/usr/local/opt \
			#	--with-lib-path=/usr/local/opt/lib
			#	--with-sysroot=/ \
			#	--with-local-prefix=/usr/local/opt \
			#	--with-build-sysroot=/usr/local/opt \
			#eof

			#configures/binutils-i686-strap
			../../binutils-gdb/configure \
				--enable-{multi{arch,byte,lib},lto,shared,plugins,targets=all,gold} \
				--disable-{nls,gdb,werror,bootstrap} \
