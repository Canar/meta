			#	--with-lib-path=/usr/local/opt/lib
			#	--with-sysroot=/ \
			#	--with-local-prefix=/usr/local/opt \
			#	--with-build-sysroot=/usr/local/opt \
			#eof

			#configures/gcc
			../../gcc/configure \
				--enable-{multi{arch,byte,lib},shared,languages=c\,c++\,lto,lto} \
