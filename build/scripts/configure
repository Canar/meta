				--with-build-libsubdir=/usr/local/opt/lib \
				--with-slibdir=/usr/local/opt/lib/ \
				--without-headers \
				--with-newlib \
				--with-glibc-version=2.25 \
				--{build,host}=x86_64-pc-linux-gnu \
